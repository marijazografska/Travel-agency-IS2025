@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "Hotel & Apartment Listings";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="d-flex flex-wrap">
        @foreach (var item in Model)
        {
            <div class="card m-3" style="width: 18rem;">
                <img src="@item["ImageUrl"]" alt="@item["Name"]" class="card-img-top" style="height: 150px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item["Name"]</h5>
                    <p class="card-text"><strong>Location:</strong> @item["Location"]</p>
                    <p class="card-text"><strong>Price:</strong> $@item["Price"]</p>
                    <p class="card-text">@item["Description"]</p>
                </div>
                <div class="card-footer">
                    @Html.Raw(item["Map"]) <!-- Embedded map iframe -->
                </div>
            </div>
        }
    </div>
</div>


<style>
    .card-footer {
        height: 150px;
        width: 100%;
        overflow: hidden;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }
    .container{
        margin-left: 110px;
    }
</style>