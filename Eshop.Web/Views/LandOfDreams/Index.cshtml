@model List<Dictionary<string, object>>

@{
    ViewData["Title"] = "Hotel & Apartment Listings";
}


<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">@ViewData["Title"]</h2>

    <div class="row row-cols-1 row-cols-md-3 gx-5 gy-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0 rounded-4">
                    <img src="https://landofdreamsapp-bqhhgdcbcsgkatdv.northeurope-01.azurewebsites.net/@item["ImageUrl"]" alt="@item["Name"]" class="card-img-top" style="height: 150px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@item["Name"]</h5>
                        <p class="card-text"><strong>Location:</strong> @item["Location"]</p>
                        <p class="card-text"><strong>Price:</strong> <span class="text-success fw-bold">$@item["Price"]</span></p>
                        <p class="card-text">
                            @{
                                var description = item["Description"]?.ToString();
                                var words = description?.Split(' ');
                                var shortDescription = words != null && words.Length > 50
                                    ? string.Join(" ", words.Take(50)) + "..."
                                    : description;
                            }
                            @shortDescription</p>
                    </div>
                    <div class="card-footer">
                        @Html.Raw(item["Map"]) 
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
    .card-footer {
        height: 200px;
        width: 100%;
        overflow: hidden;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1100px; 
        margin: 0 auto; 
    }

    .card {
        transition: 0.3s ease-in-out;
        border-radius: 10px;
        width: 100%; 
        max-width: 22rem; 
        margin: auto;
    }

    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }


</style>