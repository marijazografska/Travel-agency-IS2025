@using EShop.Domain.Domain
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EShop.Domain.Domain.Product

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var itinerary = ViewData["Itinerary"] as Itinerary;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body">
                    <h2 class="text-center text-primary mb-4">Create a New Travel Package</h2>
                    <hr />
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label fw-bold">Travel Package Name</label>
                            <input asp-for="ProductName" class="form-control" placeholder="Enter travel package name" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductDescription" class="form-label fw-bold">Description</label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="3" placeholder="Enter description"></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductImage" class="form-label fw-bold">Image URL</label>
                            <input asp-for="ProductImage" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="ProductImage" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold">Price ($)</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label fw-bold">Rating</label>
                            <input asp-for="Rating" class="form-control" type="number" step="0.1" placeholder="Enter rating (0-10)" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ItineraryId" class="form-label fw-bold">Itinerary ID</label>
                            <input asp-for="ItineraryId" class="form-control" placeholder="Enter itinerary ID" />
                            <span asp-validation-for="ItineraryId" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="AlreadyhasItinerary">
                            <label class="form-check-label fw-bold">
                                @Html.DisplayNameFor(model => model.AlreadyhasItinerary)
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Travel Package</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}