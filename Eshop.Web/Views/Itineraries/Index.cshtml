@model IEnumerable<EShop.Domain.Domain.Itinerary>

@{
    ViewData["Title"] = "Itineraries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="margin: 2vh">
    <a asp-action="Create" class="btn btn-outline-info">➕ Create New Itinerary</a>
</p>


<div class="container">
    <h1 class="mb-4 text-center">Itineraries</h1>
    
    <table class="table table-bordered table-hover text-center" style="width: 80%; margin: auto;">
        <thead class="thead-dark">
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Travel Package</th>
            <th>Actions</th>
            <th>Create Route</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartDate.ToString("MMMM dd, yyyy")</td>
                <td>@item.EndDate.ToString("MMMM dd, yyyy")</td>
                <td>@item.Product.ProductName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏ Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                </td>
                <td>
                    <a asp-controller="PlannedRoutes" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        ➕ Create Route
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>