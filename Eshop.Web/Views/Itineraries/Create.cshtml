@model EShop.Domain.Domain.Itinerary

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Create Itinerary</h1>

<h4 class="text-center">Fill in the details of your itinerary</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"><i class="bi bi-calendar-event"></i> Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" placeholder="Select start date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label"><i class="bi bi-calendar-x"></i> End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" placeholder="Select end date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductId" class="control-label"><i class="bi bi-box"></i> Travel Package</label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId">
                    <option value="">Select a travel package</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="form-group text-center mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> Create Itinerary
                </button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}